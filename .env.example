# Next.js Configuration
# The public URL of your application (used for absolute URLs, redirects, etc.)
NEXT_PUBLIC_URL=http://localhost:3000

# BetterAuth Configuration
# Secret key for BetterAuth (generate a random string, e.g., using `openssl rand -base64 32`)
BETTER_AUTH_SECRET=your-secret-key-here-change-in-production

# Base URL for BetterAuth API endpoints
# In development, this is typically the same as NEXT_PUBLIC_URL
# In production, this should be your production domain
BETTER_AUTH_URL=http://localhost:3000

# Public URL for BetterAuth client (used in browser)
# This should match BETTER_AUTH_URL in most cases
NEXT_PUBLIC_AUTH_URL=http://localhost:3000

# Database Configuration
# Neon (Postgres) connection string
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Environment
# Set to 'development', 'production', or 'test'
NODE_ENV=development
