{
  "name": "template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check": "biome check .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "pre-commit": "bun run lint && bun run type-check",
    "install-git-hooks": "bash scripts/install-git-hooks.sh",
    "postinstall": "bun run install-git-hooks",
    "db:setup": "bash scripts/db-setup.sh",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && bash scripts/db-setup.sh",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@neondatabase/serverless": "1.0.2",
    "@tanstack/react-query": "5.90.20",
    "@trpc/client": "11.8.1",
    "@trpc/next": "11.10.0",
    "@trpc/react-query": "11.8.1",
    "@trpc/server": "11.8.1",
    "better-auth": "1.4.18",
    "clsx": "2.1.1",
    "drizzle-orm": "0.45.1",
    "next": "16.1.6",
    "postgres": "3.4.8",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tailwind-merge": "3.4.0",
    "tailwindcss-animate": "1.0.7",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@tailwindcss/postcss": "4.1.18",
    "@types/node": "25.2.0",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "autoprefixer": "10.4.24",
    "drizzle-kit": "0.31.8",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
